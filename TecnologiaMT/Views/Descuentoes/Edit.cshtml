@model TecnologiaMT.Models.Descuento

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow mb-5 ">
        <div class="card">
            <div class="card-header py-3 bg-primary">
                <h6 class="m-0 font-weight-bold text-white">Nuevo Descuento</h6>
            </div>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">

                            <h6>Codigo</h6>
                            <a> <strong> @Html.DisplayFor(model => model.Cod_Desc, new { htmlAttributes = new { @class = "form-control" } }) </strong></a>
                            @Html.HiddenFor(model => model.Cod_Desc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Cod_Desc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">

                            <h6>Nombre</h6>
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">

                            <h6>Porcentaje %</h6>
                            @Html.EditorFor(model => model.Porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Porcentaje, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">

                            <h6>Fecha Inicio</h6>
                            @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">

                            <h6>Fecha Fin</h6>
                            @Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group m-3">
                        <div class=" btn-sm float-right">
                            <input type="submit" value="Agregar" class="btn btn-success" />
                            <button class="btn btn-warning"> @Html.ActionLink("Cancelar", "Index")</button>
                        </div>

                    </div>
                </div> <hr />
            </div>

        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
