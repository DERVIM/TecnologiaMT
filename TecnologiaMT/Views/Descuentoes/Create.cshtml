@model TecnologiaMT.Models.Descuento

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="col-11 mx-auto pt-0">
    <div class="card">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Nuevo Descuento</h6>
        </div>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">

                        <h6>Codigo</h6>
                        @Html.EditorFor(model => model.Cod_Desc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cod_Desc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">

                        <h6>Nombre</h6>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">

                        <h6>Porcentaje %</h6>
                        @Html.EditorFor(model => model.Porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Porcentaje, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">

                        <h6>Fecha Inicio</h6>
                        @Html.EditorFor(model => model.FechaInicio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">

                        <h6>Fecha Fin</h6>
                        @Html.EditorFor(model => model.FechaFin, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group m-3">
                    <div class=" btn-sm float-left">
                        <input type="submit" value="Agregar" class="btn btn-success" />              
                    </div>
                    <div class=" btn-sm float-left">
                        <a href="@Url.Action("Index","Descuentoes" )" class="btn btn-warning " style="float:left">Cancelar </a>
                    </div>
                </div>
            </div> <hr />
        </div>

    </div>
</div>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
