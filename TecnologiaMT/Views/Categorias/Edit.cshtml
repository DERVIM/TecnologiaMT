@model TecnologiaMT.Models.Categoria

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="col-11 mx-auto pt-0">
    <div class="card">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Modificar Categoria</h6>
        </div>
        <hr />
        <div class="card-body">
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-3 m-2">
                    <div class="form-group">
                        <h6>Codigo</h6>
                        <a> <strong> @Html.DisplayFor(model => model.Cod_Categoria, new { htmlAttributes = new { @class = "form-control" } }) </strong></a>
                        @Html.HiddenFor(model => model.Cod_Categoria, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cod_Categoria, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3 m-2">
                    <div class="form-group">

                        <h6>Nombre Categoria</h6>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group m-4">

                    <div class=" btn-sm float-left">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </div>
                    <div class=" btn-sm float-left">
                        <a href="@Url.Action("Index","Categorias" )" class="btn btn-warning " style="float:left">Cancelar </a>
                    </div>
                </div>
            </div><hr />
        </div>

    </div>
</div>
        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
