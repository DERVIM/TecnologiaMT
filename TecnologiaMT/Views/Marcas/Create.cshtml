@model TecnologiaMT.Models.Marca

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="card shadow mb-5">
    <div class="form-horizontal">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Nuevo Marca</h6>
        </div>
        <div class="card-body">
            <div class="row">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-4">
                    <div class="form-group  m-1">

                        <h6>Codigo</h6>
                        @Html.EditorFor(model => model.Cod_Marca, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cod_Marca, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group m-1">

                        <h6>Nombre de la Marca</h6>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group m-4">

                    <div class=" btn-sm float-left">
                        <input type="submit" value="Agregar" class="btn btn-success" />
                    </div>
                    <div class=" btn-sm float-left">
                        <a href="@Url.Action("Index","Marcas" )" class="btn btn-warning " style="float:left">Cancelar </a>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>
            }


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
