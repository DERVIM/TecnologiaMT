@model IEnumerable<TecnologiaMT.Models.Renta>

@{
    ViewBag.Title = "Index";
}

<div class="card-header py-3 bg-primary">
    <h6 class="m-0 font-weight-bold text-white">Lista de Rentas</h6>
</div>

<p>
    @Html.ActionLink("Nueva Renta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cod_Renta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Renta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Final)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado.Cod_Emp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Cod_Cli)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cod_Renta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_Renta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Final)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.Cod_Emp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Cod_Cli)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Cuotas", "Index", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })

        </td>
    </tr>
}

</table>
