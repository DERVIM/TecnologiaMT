@model TecnologiaMT.Models.Producto

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="col-11 mx-auto pt-0">
    <div class="card">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Nuevo Producto</h6>
        </div>

        <hr />
        <div class="card-body">
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>Codigo</h6>
                        @Html.EditorFor(model => model.Cod_Prod, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cod_Prod, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">         
                        <h6>Nombre</h6>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">      
                        <h6>Modelo</h6>
                        @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <h6>Numero Serie</h6>
                        @Html.EditorFor(model => model.Num_Serie, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Num_Serie, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">  
                        <h6>Stock</h6>
                        @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">                     
                        <h6>PrecioCompra</h6>
                        @Html.EditorFor(model => model.PrecioCompra, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PrecioCompra, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">                  
                        <h6>Precio Venta</h6>
                        @Html.EditorFor(model => model.PrecioVenta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PrecioVenta, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">           
                        <h6>Precio UniRenta</h6>
                        @Html.EditorFor(model => model.Pre_UniRenta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Pre_UniRenta, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">              
                        <h6>Descripcion</h6>
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                       
                        <h6>Marca</h6>
                        @Html.DropDownList("MarcaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MarcaId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                      
                        <h6>Categoria</h6>
                        @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                      
                        <h6>Estado Producto</h6>
                        @Html.DropDownList("Estado_ProductoId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Estado_ProductoId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group m-3">
                    <div class=" btn-sm float-left">
                        <input type="submit" value="Agregar" class="btn btn-success" />

                    </div>
                    <div class=" btn-sm float-left">
                        <a href="@Url.Action("Index","Productoes" )" class="btn btn-warning " style="float:left">Cancelar </a>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>
        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
