@model TecnologiaMT.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Edit", "Usuarios", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Restablezca la contraseña.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    
<div class="form-group">
    <h6>Email</h6>
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
</div>
    @*<div class="form-group">
      <h6>Password</h6>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <h6>Confonfimar Password</h6>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Restablecer" />
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <h6>Rol</h6>
            @Html.DropDownList("RolId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group m-4">
        <div class="btn-sm float-left">
            <input type="submit" class="btn btn-success" value="Registrarse" />
        </div>
        <div class=" btn-sm float-left">
            <a href="@Url.Action("Index","Usuarios" )" class="btn btn-warning " style="float:left">Cancelar </a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}








































