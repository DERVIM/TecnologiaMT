@model TecnologiaMT.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<h3 class="m-5 col-md-12">Registrar un Nuevo usuario</h3>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{<div class="col-11 mx-auto pt-0">
     <div class="card bg-gradient-light">
         @Html.AntiForgeryToken()
         <div class="card-header py-3 bg-primary">
             <h6 class="m-0 font-weight-bold text-white">Cree una cuenta nueva.</h6>
         </div>
         @Html.ValidationSummary("", new { @class = "text-danger" })
         <hr />
         <div class="card-body">
             <div class="row">
                 <div class="col-md-6">
                     <div class="form-group m-2">
                         <h6>Correo</h6>

                         @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                     </div>
                 </div>
                 <div class="col-md-3">
                     <div class="form-group m-2">

                         <h6>Contraseña</h6>

                         @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                     </div>
                 </div>
             <div class="col-md-3">
                     <div class="form-group m-2">
                         <h6>Confirmar Contraseña</h6>

                         @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                     </div>
                 </div>

                 <div class="form-group m-4">
                     <div class="btn-sm float-left">
                         <input type="submit" class="btn btn-success" value="Registrarse" />
                     </div>
                     <div class=" btn-sm float-left">
                         <a href="@Url.Action("Index","Usuarios" )" class="btn btn-warning " style="float:left">Cancelar </a>
                     </div>
                 </div>

             </div><hr />
         </div>
     </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
